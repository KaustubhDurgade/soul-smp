{
  "version": 1,
  "namespaces": ["ability", "contract", "event", "mythic", "resonance", "system"],
  "metrics": {
    "casts": {"type": "counter", "desc": "Number of activations"},
    "uptime_seconds": {"type": "sum", "desc": "Total active uptime"},
    "damage_total": {"type": "sum", "desc": "Post-mitigation damage"},
    "damage_true_total": {"type": "sum", "desc": "True damage portion"},
    "healing_total": {"type": "sum", "desc": "Effective healing"},
    "overheal_total": {"type": "sum", "desc": "Overheal amount"},
    "lifesteal_heal": {"type": "sum", "desc": "Healing from lifesteal domain"},
    "cc_applied_count": {"type": "counter", "desc": "Count of CC applications"},
    "cc_full_duration_count": {"type": "counter", "desc": "CC not shortened by DR"},
    "resource_generated": {"type": "sum", "desc": "Resource produced"},
    "resource_spent": {"type": "sum", "desc": "Resource spent"},
    "internal_cooldown_hits": {"type": "counter", "desc": "Effect blocked by internal cooldown"},
    "participants": {"type": "gauge", "desc": "Unique actors affected"},
    "meteor_count": {"type": "counter", "desc": "Meteors spawned"},
    "clone_count": {"type": "counter", "desc": "Clones spawned"},
    "entity_spawns": {"type": "counter", "desc": "Summoned entities"},
    "execution_count": {"type": "counter", "desc": "Executions triggered"},
    "revive_count": {"type": "counter", "desc": "Revives performed"},
    "dash_distance_total": {"type": "sum", "desc": "Total dash distance"},
    "pull_events": {"type": "counter", "desc": "Pull / vortex events"},
    "reflect_count": {"type": "counter", "desc": "Projectiles reflected"}
  },
  "kpis": {
    "dmg_per_cast": "damage_total / casts",
    "effective_heal_ratio": "healing_total / (healing_total + overheal_total)",
    "avg_cc_duration": "(cc_full_duration_count > 0) ? (cc_full_duration_count / cc_applied_count) : 0",
    "resource_cycle_efficiency": "resource_spent / resource_generated",
    "execution_rate": "execution_count / casts",
    "uptime_ratio": "uptime_seconds / window_seconds"
  }
}
